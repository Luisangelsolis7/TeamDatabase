<!DOCTYPE html>
<html lang="en">
<head>

    <title>Unclaimed Items</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <p align="right">
        <button><a href="/">Log Out</a></button>
    </p>
    <div><img class="one" src="/images/Aurora_University_logo.jpg" alt="Aurora Banner" style="height: 130px;width: 400px;"></div>
</head>
<body>
<div class="container" style="background-color:white; width: 75%;height: 100%; text-align:center; vertical-align: center; margin-left: auto;
  margin-right: auto;">

<div class="table-data" style="vertical-align: center">
    <h2>Unclaimed Items</h2>
    <table border="1">
        <tr>
            <th>Item ID</th>
            <th>Item Type</th>
            <th>Item Name</th>
            <th>Description</th>
            <th>Value</th>
            <th>Location</th>
            <th>Date</th>
            <th>Time</th>
            <th>Officer Last Name</th>
            <th>Officer Badge Number</th>

        </tr>

        <%
        if(userData.length!=0){
            var i=1;
        userData.forEach(function(data){
        %>
        <tr>

            <td><%=data.ItemID %></td>
            <td><%=data.CategoryName %></td>
            <td><%=data.ItemName %></td>
            <td><%=data.ItemDesc %></td>
            <td><%=data.ItemValue %></td>
            <td><%=data.Location %></td>
            <td><%=data.Date %></td>
            <td><%=data.Time %></td>
            <td><%=data.Officer_Lname %></td>
            <td><%=data.BadgeNumber %></td>
            <td><a href="/admin/claim/<%=data.ItemID%>">Claim</a></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    <br><br>
    <button><a href="/admin/Lost">Lost Items</a></button>
    <button><a href="/admin/claimed">Claimed Items</a></button>
    <br><br>
    <button><a href="/admin/logform">Log an unclaimed item</a></button>
    <br>
</div>
</div>
</body>
</html>